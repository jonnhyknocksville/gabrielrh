                    {# <a href="{{ path('categories') }}" class="btn btn-secondary" style="color:white !important">Accéder à nos cours</a> #}
                    <a aria-label="Devenir formateur - Académie WS" href="{{ path('app_contact') }}" class="btn btn-primary" style="color:white !important">DEVENIR PARTENAIRE COMMERCIAL</a>
