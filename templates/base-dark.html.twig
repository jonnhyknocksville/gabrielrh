<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="{% block meta_description %} {% endblock %}" />
        <title>{% block title %}- {{company_name}}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% for notice in app.flashes('confirmation') %}
            <div class="alert alert-success">
                {{ notice }}
            </div>
        {% endfor %}
        
        {% if app.user %}
            {% include 'navbar/teacher-nav.html.twig' %}
        {% else %}
            {% include 'navbar/index.html.twig' %}
        {% endif %}

    <div class="container-fluid px-0" style="padding-top:70px;background:linear-gradient(0deg,#31092a,#0e0331);">

        {% block body %}
            
        {% endblock %}

        {% include 'footer/index.html.twig' %}
    </div>
    </body>
</html>
