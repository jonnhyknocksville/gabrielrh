{% extends 'base.html.twig' %}

{% block meta_description %} Contactez l'Acad√©mie WS pour tout question concernant l'univers de la formation digitale.  {% endblock %}

{% block title %}Contact {{parent()}} {% endblock %}

{% form_theme contactForm 'bootstrap_5_layout.html.twig' %}


{% block body %}
    <div class="d-flex my-5">
        <div class="form-shadow relative row col-10 col-sm-10 col-md-6 mx-auto white justify-content-center align-items-centerwhite smallBorderRadius p-0 my-5">
            <div class="form-circle"> </div>
            {{ form_start(contactForm, {"attr": {"class": "col-md-12 row px-5 py-5 justify-content-center" } }) }}
                <div class="col-md-12">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Contactez-nous</h1>
                </div>
                {{ form_row(contactForm.firstname) }}
                {{ form_row(contactForm.lastname) }}
                {{ form_row(contactForm.email) }}
                {{ form_row(contactForm.phone) }}
                {{ form_row(contactForm.currentJob) }}
                {{ form_row(contactForm.object) }}
                {{ form_row(contactForm.message) }}

                <button type="submit" class="btn btn-lg btn-primary mt-4 col-md-6 buttonBorderRadius">Envoyer</button>
            {{ form_end(contactForm) }}
        </div>
    </div>
{% endblock %}
